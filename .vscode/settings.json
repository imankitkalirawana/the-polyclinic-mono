{
  "jest.runMode": "on-demand",
  "search.exclude": {
    "**/node_modules/**": true,
    "**/.pnpm/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/coverage/**": true,
    "**/.turbo/**": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.pnpm/**": true,
    "**/.next/**": true
  },
  "search.followSymlinks": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll.eslint": "explicit"
  }
}
