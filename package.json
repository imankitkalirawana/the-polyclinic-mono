{
  "name": "polyclinic",
  "private": true,
  "packageManager": "pnpm@10.9.0",
  "scripts": {
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "build:api": "turbo run build --filter=api",
    "start": "turbo run start",
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=web --filter=@repo/store",
    "dev:api": "turbo run dev --filter=api --filter=@repo/store",
    "repl": "pnpm --filter api run repl",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "lint:fix:web": "turbo run lint -- --fix --filter=web",
    "lint:fix:api": "turbo run lint -- --fix --filter=api",
    "test": "turbo run test",
    "format": "turbo run format",
    "tsc": "turbo run tsc",
    "tsc:web": "turbo run tsc --filter=web --filter=@repo/store",
    "tsc:api": "turbo run tsc --filter=api --filter=@repo/store",
    "commitlint": "commitlint",
    "lint-staged": "pnpm --filter web run lint-staged",
    "prepare": "husky"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.8",
      "@types/react-dom": "19.1.6",
      "@react-aria/i18n": "3.12.12"
    },
    "onlyBuiltDependencies": [
      "@heroui/shared-utils",
      "@nestjs/core",
      "@prisma/engines",
      "@sentry/cli",
      "core-js",
      "esbuild",
      "prisma",
      "protobufjs",
      "puppeteer",
      "sharp",
      "unrs-resolver",
      "ws"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "conventional-changelog-atom": "^5.0.0",
    "husky": "^9.1.7",
    "turbo": "^2.8.10"
  }
}
