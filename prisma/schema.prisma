generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  SUPERADMIN
  MODERATOR
  OPS
  ADMIN
  PATIENT
  DOCTOR
  NURSE
  RECEPTIONIST
}

model User {
  id        Int    @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(PATIENT)
  phone     String?
  image     String?
  organization String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("users")
}

model Session {
  sessionId String   @id @default(uuid())
  userId    Int
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("sessions")
}

model Otp {
  id        Int      @id @default(autoincrement())
  email     String
  otp       String
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email])
  @@index([email, otp])
  @@map("otps")
}
